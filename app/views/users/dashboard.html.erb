
<p>Your current balance is <b>$<%=@user_balance%> </b>.
Your bank balance is <b>$<%=@user_bank_balance%></b> 
with <b>$<%=@user_future_balance%></b> in future transactions and <b>$<%=@user_balance%></b> put away</p>


  <div class="progress">
  <div class="progress-bar progress-bar-success" style="width: 50%">
    <span class="">Available</span>
  </div>
  <div class="progress-bar progress-bar-warning" style="width: 30%">
    <span class="">Future</span>
  </div>
  <div class="progress-bar progress-bar-danger" style="width: 20%">
    <span class="">Put Away</span>
  </div>
</div>

  


<div class="row">
	<div class="col-md-4">
		<div class="panel panel-primary">
			
			<div class="panel-heading">
		    	<h3 class="panel-title">Recent Transactions</h3>
		    </div>
		  	
		  	<div class="panel-body">
				<table class="table table-striped table-bordered table-condensed">
					<tr>
						<th>Date</th>
						<th>Transaction</th>
						<th>Amount</th>
						<th>Type</th>
					</tr>
				<% @recent_transactions.each do |transaction| %>
					<tr class="<%=transaction.type_of%>">
						<td>
							<%= transaction.transaction_date %>
						</td>
						<td>
							<%= transaction.name %>
						</td>
						<td>
							<%= transaction.amount %>
						</td>
						<td>
							<%= transaction.type_of %>
						</td>
					</tr>
				<% end %>
				</table>
				<%= link_to 'Create New Transaction', new_transaction_path , :method => :get %>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
			
			<div class="panel-heading">
		    	<h3 class="panel-title">Future Transactions</h3>
		    </div>
		  	
		  	<div class="panel-body">
				<table class="table table-striped table-bordered table-condensed">
					<tr>
						<th>Date</th>
						<th>Transaction</th>
						<th>Amount</th>
						
					</tr>
				<% @future_transactions.each do |transaction| %>
					<tr class="<%=transaction.type_of%>">
						<td>
							<%= transaction.transaction_date %>
						</td>
						<td>
							<%= transaction.name %>
						</td>
						<td>
							<%= transaction.amount %>
						</td>
						
					</tr>
				<% end %>
				</table>
				<%= link_to 'Create New Transaction', new_transaction_path , :method => :get %>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
			
			<div class="panel-heading">
		    	<h3 class="panel-title">Putaway Funds</h3>
		    </div>
		  	
		  	<div class="panel-body">
				<table class="table table-striped table-bordered table-condensed">
					<tr>
						
						<th>Transaction</th>
						<th>Amount</th>
						
					</tr>
				<% @putaway_transactions.each do |transaction| %>
					<tr class="<%=transaction.type_of%>">
						
						<td>
							<%= transaction.name %>
						</td>
						<td>
							<%= transaction.amount %>
						</td>
						
					</tr>
				<% end %>
				</table>
				<%= link_to 'Create New Transaction', new_transaction_path , :method => :get %>
			</div>
		</div>
	</div>
</div>


