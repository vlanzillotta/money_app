

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="panel panel-primary">
			

			<div class="panel-heading">
		    	<h3 class="panel-title">New <%= @transaction.type_of %> Transaction</h3>
		    </div>
		    <div class="panel-body">
		    <%= form_for @transaction, url: {action: "create"}, html: {} do |transaction| %>

		    	<p>
		    	<%= transaction.label :name %>:
				<%= transaction.text_field :name %>
				</p>

				<p>
		  		<%= transaction.label :amount %>:
				<%= transaction.text_field :amount %>
				</p>

				<p>
				<%= transaction.label :transaction_date %>:
				<%= transaction.text_field :transaction_date %>
				</p>

				<% if @transaction.type_of != "putaway"%>
					<p>
					<%= transaction.label :repeat_frequency %>:
					<%= select(:transaction, :repeat_frequency, [
											["never", ""],
											["daily", "daily"],  
											["weekly", "weekly"],
											["bi-weekly", "bi-weekly"],  
											["monthly", "monthly"],

											]) %>
					
					</p>
				<% end %>

				<%= transaction.submit "submit", class: "btn btn-large btn-primary" %>
		  	<% end %>
		</div>
	</div>

</div>