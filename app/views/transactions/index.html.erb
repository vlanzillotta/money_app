

<%=@current_user.email %>

<div class="row">
	<div class="col-md-3 col-md-offset-1">
		<div class="panel panel-primary">
			
			<div class="panel-heading">
		    	<h3 class="panel-title">Here are your transactions</h3>
		    </div>
		  	
		  	<div class="panel-body">
				<table class="table table-striped table-bordered table-condensed">
					<tr>
						<th>Date</th>
						<th>Transaction</th>
						<th>Amount</th>
						<th>Type</th>
					</tr>
				<% @transaction.each do |transaction| %>
					<tr class="<%=transaction.type_of%>">
						<td>
							<%= transaction.transaction_date %>
						</td>
						<td>
							<%= transaction.name %>
						</td>
						<td>
							<%= transaction.amount %>
						</td>
						<td>
							<%= transaction.type_of %>
						</td>
					</tr>
				<% end %>
				</table>

			</div>
		</div>
	</div>
</div>

<%= link_to 'Create New Transaction', new_transaction_path , :method => :get %>
